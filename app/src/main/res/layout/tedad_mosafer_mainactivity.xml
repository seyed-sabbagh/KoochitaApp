<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:background="#445565">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خالی"
        android:textColor="#B4C0CC"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/viesws"
        app:layout_constraintStart_toStartOf="@+id/viesws"
        app:layout_constraintTop_toTopOf="@+id/textView23"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="رزرو شده"
        android:textColor="#4DC7BC"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="@+id/viesw"
        app:layout_constraintStart_toStartOf="@+id/viesw"
        app:layout_constraintTop_toTopOf="@+id/textView22"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="رزرو شده"
        android:textColor="#BF0606"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="MissingConstraints" />


    <androidx.cardview.widget.CardView
        android:id="@+id/view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/circleImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.4"
            android:background="#FF0000"
            android:scaleType="centerCrop"
            android:src="@drawable/keshti_banner" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/viesw"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/circleImages"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.4"
            android:background="#4DC7BC"
            android:scaleType="centerCrop"
            android:src="@drawable/keshti_banner" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/viesws"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/viesw"
        app:layout_constraintEnd_toStartOf="@+id/viesw"
        app:layout_constraintTop_toTopOf="@+id/viesw"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/circleImagess"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.4"
            android:background="#EFEFEF"
            android:scaleType="centerCrop"
            android:src="@drawable/keshti_banner" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/iransans"
        android:text="@string/tedad_mosafer_main"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/iransans"
        android:text="@string/vaziyat_otagh_main"
        android:textColor="#B4C0CC"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/iransans"
        android:text="@string/bishtar"
        android:textColor="#FBC155"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="65dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:backgroundTint="#FBC155"
        android:src="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="@+id/textView24"
        app:layout_constraintEnd_toStartOf="@+id/textView24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView24" />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/expandableView"
        android:layout_width="44dp"
        android:layout_height="7dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_circle_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/phoneNumber"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="(999) 345 32 45"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/phoneDesc"
            app:layout_constraintStart_toEndOf="@id/phoneIcon"
            app:layout_constraintTop_toTopOf="@+id/phoneIcon" />

        <TextView
            android:id="@+id/phoneDesc"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Mobile"
            android:textColor="#8A000000"
            app:layout_constraintBottom_toBottomOf="@+id/phoneIcon"
            app:layout_constraintStart_toEndOf="@id/phoneIcon"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

        <ImageView
            android:id="@+id/mailIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneIcon" />

        <TextView
            android:id="@+id/mailNumber"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="workemail@gmail.com"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/mailDesc"
            app:layout_constraintStart_toEndOf="@id/mailIcon"
            app:layout_constraintTop_toTopOf="@+id/mailIcon" />

        <TextView
            android:id="@+id/mailDesc"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Work"
            android:textColor="#8A000000"
            app:layout_constraintBottom_toBottomOf="@+id/mailIcon"
            app:layout_constraintStart_toEndOf="@id/mailIcon"
            app:layout_constraintTop_toBottomOf="@+id/mailNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



