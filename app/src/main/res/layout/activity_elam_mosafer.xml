<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_XD_Dark"
    tools:context=".ElamMosaferActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_XD_lite"
        android:gravity="end|center"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/iransans"
            android:text="@string/kasb_O_Kar_Toolbar"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/iransans"
        android:text="@string/jost_o_joye_otagh"
        android:textColor="@color/red_XD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/red_XD"
        app:layout_constraintTop_toBottomOf="@+id/txt1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="@android:color/darker_gray"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            tools:ignore="MissingConstraints">


            <androidx.cardview.widget.CardView


                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:elevation="12dp"
                app:cardCornerRadius="25dp">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/keshti_banner" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/name_otagh"
                android:textColor="@color/lightWhite"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/shomare_yek"
                android:textColor="@color/lightWhite"
                android:textSize="10sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/vaziyat_panj_roze"
                android:textColor="@color/lightWhite"
                android:textSize="12sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/transparent_bg_bordered_button"
                android:fontFamily="@font/iransans"
                android:text="@string/elame_mosafer"
                android:textAlignment="center"
                android:textSize="8sp"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="@android:color/darker_gray"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            tools:ignore="MissingConstraints">


            <androidx.cardview.widget.CardView


                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:elevation="12dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/keshti_banner" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/name_otagh"
                android:textColor="@color/lightWhite"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/shomare_yek"
                android:textColor="@color/lightWhite"
                android:textSize="10sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/vaziyat_panj_roze"
                android:textColor="@color/lightWhite"
                android:textSize="12sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/transparent_bg_bordered_button"
                android:fontFamily="@font/iransans"
                android:text="@string/elame_mosafer"
                android:textAlignment="center"
                android:textSize="8sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="@android:color/darker_gray"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            tools:ignore="MissingConstraints">


            <androidx.cardview.widget.CardView

                android:id="@+id/viesws2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:elevation="12dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/circleImagess2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/keshti_banner" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/name_otagh"
                android:textColor="@color/lightWhite"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/shomare_yek"
                android:textColor="@color/lightWhite"
                android:textSize="10sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/iransans"
                android:padding="5dp"
                android:text="@string/vaziyat_panj_roze"
                android:textColor="@color/lightWhite"
                android:textSize="12sp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/transparent_bg_bordered_button"
                android:fontFamily="@font/iransans"
                android:text="@string/elame_mosafer"
                android:textAlignment="center"
                android:textSize="8sp"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_XD_lite"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_back_xd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>